<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List Tweets</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/3.1.0/socket.io.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <style>
        .container {
            width: 500px;
        }
    
        .input-group-text {
            width: 100px;
        }

        .input-group {
            margin-bottom: 15px;
            transition: 1s ease;
        }

        h1 {
            text-align: center;
        }    
    </style>

    
</head>
<body>
    <div class="container">
        <h1>CC Gaming Tweets</h1>
            <% if (tweets) { %>
                <% tweets.reverse() %>
                <% tweets.forEach(function(tweet){ %>
                        <div class="input-group">
                            <div class="input-group-text name_text"><%= tweet.name %></div>
                            <div class="form-control tweet_text"><%= tweet.text %></div>
                            <div class="input-group-text"><button class="btn btn-success" id="<%= tweet._id %>">Replay</button></div>
                        </div>
                    <% }); %>
                <% } %>
    </div>

    <script>
        let socketio = io();
        let btns = document.querySelectorAll('.btn');
        btns.forEach(btn => {
            btn.addEventListener('click', (e) => {
                let grandParent = btn.parentElement.parentElement;
                let name = grandParent.querySelector('.name_text').textContent;
                let text = grandParent.querySelector('.tweet_text').textContent;
                let id = btn.id;
                let dataToSend = {
                    username: name,
                    tweet_text: text,
                    id: id+"_"+ Math.random()
                }
                socketio.emit('replayTweet', dataToSend);
            });
        });
    </script>
</body>
</html>